<div class="admin-form">
  
  <%= error_messages_for :section %>
  
  <fieldset>
    <legend>Add New Section</legend>
    <% form_for :section, :action => :add_section do |form| %>
    
      <%= render :partial => "section_form", :locals => { :form => form } %>
    
      <p style="padding-top:25px;">
        <%= submit_tag "Add Section" %>
      </p>
    <% end %>
  </fieldset>
  
</div>