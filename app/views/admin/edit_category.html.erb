<div class="admin-form">
  
  <%= error_messages_for :category %>
  
  <fieldset>
    <legend>Edit Category</legend>
    <% form_for :category, @category, :url => {:controller => :admin, :action => :update_category, :id => @category} do |form| %>
    
      <%= render :partial => "category_form", :locals => { :form => form } %>
    
      <p style="padding-top:25px;">
        <%= submit_tag "Save Changes" %>
      </p>
    <% end %>
  </fieldset>
  
</div>